<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskQuestion">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/farmerEditText"
            android:layout_alignParentLeft="true">
        <ImageView
            android:id="@+id/profilepicAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/farmerEditText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/farmerButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/farmerEditText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:text="Post"
            android:layout_marginRight="6dp" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"></android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

</RelativeLayout>